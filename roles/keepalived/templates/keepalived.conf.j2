script_security 1
vrrp_script check_haproxy {
    script "/home/keepalived_script/check_haproxy.sh"
    weight 20
    interval 1
}

vrrp_instance VI_1 {
    {% if inventory_hostname in groups['keepalived_master'] %}
    state MASTER
    {% else %}
    state BACKUP
    {% endif %}
    interface ens3
    virtual_router_id 51
    priority {{ 100 if inventory_hostname in groups['keepalived_master'] else 99 }}
    advert_int 1
    virtual_ipaddress {
        {{ hostvars['Kryptograafia-1']['ansible_default_ipv4']['address'].split('.')[0] }}.{{ hostvars['Kryptograafia-1']['ansible_default_ipv4']['address'].split('.')[1] }}.{{ '100' if hostvars['Kryptograafia-1']['ansible_default_ipv4']['address'].split('.')[2] == '42' else '101' }}.{{ hostvars['Kryptograafia-1']['ansible_default_ipv4']['address'].split('.')[3] }}/24
    }
    unicast_peer {
        {{ groups['all'] | difference([inventory_hostname]) | map('extract', hostvars, ['ansible_default_ipv4', 'address']) | join('\n        ') }}
    }
    track_script {
        check_haproxy
    }

    authentication {
        auth_type PASS
        auth_pass {{ keepalived_auth_pass }}
    }
}
