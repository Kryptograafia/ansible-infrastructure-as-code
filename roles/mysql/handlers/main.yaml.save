- name: Restart MySQL if there is a configuration change
  ansible.builtin.service:
    name: mysql
    state: restarted

- name: Restart MySQL exporter if authentication data changes
  ansible.builtin.systemd:
    name: prometheus-mysqld-exporter
    state: restarted

- name: Reset MySQL source
  community.mysql.mysql_replication:
    mode: "{{ item }}"
    login_unix_socket: /var/run/mysqld/mysqld.sock
  loop:
    - stopreplica
    - resetprimary
  when: inventory_hostname == mysql_host

- name: Reset MySQL replica
  community.mysql.mysql_replication:
    mode: "{{ item.mode }}"
    source_host: "{{ mysql_host }}"
    source_user: "replication_user"    # Replace with your replication user
    source_password: "{{ mysql_replication_password }}"
    login_unix_socket: /var/run/mysqld/mysqld.sock
  with_items:
    - { mode: stopreplica }
    - { mode: changeprimary }
    - { mode: resetreplica }
    - { mode: startreplica }
  when: inventory_hostname != mysql_host

