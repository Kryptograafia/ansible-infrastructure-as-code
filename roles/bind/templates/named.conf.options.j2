key "transfer.key" {
        algorithm hmac-sha256;
        secret "{{ transfer_key_secret }}";
};

key "nsupdate.key" {
        algorithm hmac-sha256;
        secret "{{ update_key_secret }}";
};

options {
    directory "/var/cache/bind";

    forwarders {
        {% for forwarder in dns_forwarders %}
        {{ forwarder }};
        {% endfor %}
    };
    
    dnssec-validation no;
    allow-query {
        {{ allowed_network }};
        {{ localhost_network }};
        {{ docker_allowed_network }};
    };
};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};
