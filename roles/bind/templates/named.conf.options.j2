options {
    directory "/var/cache/bind";

    forwarders {
        {% for forwarder in dns_forwarders %}
        {{ forwarder }};
        {% endfor %}
    };
    
    dnssec-validation no;
    allow-query {
        {{ allowed_network }};
        {{ localhost_network }};
    };

};

statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};
