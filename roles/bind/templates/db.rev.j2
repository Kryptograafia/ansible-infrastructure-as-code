$TTL 604800
168.192.in-addr.arpa. IN SOA ns.{{ startup_domain }} admin.{{ startup_domain }} (
          2 ; Serial
     604800 ; Refresh
      86400 ; Retry
    2419200 ; Expire
     604800 ; Negative Cache TTL
);
{% for vm in groups['bind_servers'] %}
168.192.in-addr.arpa. IN NS {{ vm }}.{{ startup_domain }};
{% endfor %}
{% for vm in groups['all'] %}
{{ (hostvars[vm]['ansible_default_ipv4']['address'] | split('.'))[3] }}.{{ (hostvars[vm]['ansible_default_ipv4']['address'] | split('.'))[2] }} IN PTR {{ vm }}.{{ startup_domain }};
{% endfor %}
